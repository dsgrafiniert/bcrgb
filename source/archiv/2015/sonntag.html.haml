- @nav = 'sonntag'
- rooms = data.sessions2015.rooms
- sun = data.sessions2015.days.sun

.full
  %h2 Sonntag
- sun.each do |time, val|
  .full
    %h3.room_header=time
    - if val.is_a? Hash
      .rooms
        - rooms.each_index do |r|
          .room{:class => "room_#{r}"}
            %p.small
              Raum:
              = rooms[r]
            - if val[r]
              %p
                %strong
                  = val[r]['title']
              - if val[r]['speaker']
                %p
                  Sprecher(in):
                  %strong
                    - if val[r]['speaker'][0] == "@"
                      = link_to val[r]['speaker'], "http://twitter.com/#{val[r]['speaker'][1..-1]}"
                    - else
                      = val[r]['speaker']
            - else
              %p Frei

    - else
      .room_message
        %p
          %strong= val
